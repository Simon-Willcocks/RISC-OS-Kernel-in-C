# Which kernel memory manager, MMU handler, and boot sequence do you want to use?

# While there's only one option, this will choose them for you!
if [ "$MM" = "" ]; then
  MM=memory/*
fi
if [ "$MMU" = "" ]; then
  MMU=MMU/*
fi
if [ "$BOOT" = "" ]; then
  BOOT=boot/*
fi

arm-linux-gnueabi-gcc-8 -Wall -I . -march=armv7-a+nofp+mp -g -fno-zero-initialized-in-bss kernel.c $BOOT/*.c -I $BOOT $MMU/*.c -I $MMU $MM/*.c -I $MM -nostartfiles -nostdlib -T rom.script -Os -static -o rom.elf &&
arm-linux-gnueabi-objcopy -R .ignoring -O binary rom.elf rom.bin &&
ls -l rom.*

